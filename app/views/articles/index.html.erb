<h1>All Articles</h1>
<table>
<thead>
<tr>
<th>Title</th>
<th>Description</th>
<th>Action</th>
</tr>
</thead>


<tbody>
<% @allArticles.each do |article| %>
<tr>
<td><%= article.title %> </td>
<td><%= article.description %></td>
<td><%= link_to 'Show', article_path(article)%></td>
<td><%= link_to 'Editt', edit_article_path(article)%></td>
<td><%= link_to 'Delete', article_path(article), data: { "turbo-method": :delete , "turbo-confirm": "Are you sure?"} %></td></tr>
<% end %>
</table>

<%= link_to 'Create new article', new_article_path %>
</tbody>
